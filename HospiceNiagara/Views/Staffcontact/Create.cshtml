@model HospiceNiagara.Models.StaffContact

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-group">
                            <label class="control-label col-md-2">Select Users</label>
                            <div class="col-md-offset-2 col-md-10">
                                <table class="table">
                                    <tr>
                                        @{
                                            int ct = 0;
                                            List<HospiceNiagara.ViewModels.UserVM> use = ViewBag.User;
                                            foreach(var r in use)
                                            {
                                                if (ct++ % 2 == 0)
                                                {
                                                @:</tr><tr>
                                                }
                                                @:<td>
                                                    <input type="checkbox"
                                                    name="selectedUsers"
                                                    value="@r.UserID"
                                                         />
                                                    @r.UserFullName
                                                @:</td>
                                            }
                                        @:</tr>
                                        }
                                    </table>
                                </div>
                            </div>

    
    <div class="form-horizontal">
        <h4>StaffContact</h4>
        <hr />
        @Html.ValidationSummary(true)

        <div class="form-group">
            @Html.LabelFor(model => model.ContExten, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.ContExten)
                @Html.ValidationMessageFor(model => model.ContExten)
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Job Descriptions</label>
            <div>
                <table>
                    <tr>
                        <th>
                            Job Name
                        </th>
                        <th>
                            Job Description
                        </th>
                        <th>
                            Select
                        </th>
                    </tr>
                    <tr>
                        @{
                                            int count = 0;
                                            List<HospiceNiagara.ViewModels.JobDescVM> jobs = ViewBag.JobDescriptions;
                                            foreach (var j in jobs)
                                            {
                                                if (count++ % 1 == 0)
                                                {
                                                    @:</tr><tr>
                                    }
                                    @:<td>
                                        @j.JobName
                                        @:</td>
                                    @:<td>
                                        @j.JobDesc
                                        @:</td>
                                    @:<td>
                                        <input type="checkbox" name="selectedJobs" value="@j.JobID" @(Html.Raw(j.JobAssigned ? "checked=\"checked\"" : "")) />
                                        @:</td>
                            }
                            @:</tr>
                        }
                    </table>
                </div>
            </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
