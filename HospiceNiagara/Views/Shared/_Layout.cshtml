<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-default navbar-fixed-top">
            <div class="container-fluid">
                <div class="navbar-header">
                    <a class="navbar-brand" href="#">
                        <img alt="Brand" src="~/Resources/Hospice-Niagara's-LOGO_Small.png" />
                    </a>
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    @Html.ActionLink("Hospice Niagara", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                </div>
                    <div class="navbar-collapse collapse">
                        <ul class="nav navbar-nav navbar-right">
                            <li>@Html.ActionLink("Home", "Index", "Home")</li>
                            <li>@Html.ActionLink("Announcements", "Index", "Announcement")</li>
                            <li>@Html.ActionLink("Resources", "Index", "Resource")</li>
                            <li>@Html.ActionLink("Meetings", "Index", "Meeting")</li>
                            <li>@Html.ActionLink("Schedules", "Index", "Schedule")</li>
                            <li>@Html.ActionLink("Contacts", "Index", "Contact")</li>
                            <li>@Html.ActionLink("Admin ", "Index", "Admin")</li>

                        </ul>
                        @*@Html.Partial("_LoginPartial")*@
                    </div>
                </div>
            </div>
    <div class="container body-content">
        @RenderBody()
        <footer class="footer navbar-fixed-bottom">
            <div class="container">
                @*<div class="col-sm-3">
                    <a class="footer-brand" href="#">
                        <img alt="Brand" src="~/Resources/Stabler-Centre---White.png" />
                    </a>
                </div>*@
                <div class="col-sm-6">
                    <ul class="Contact-Information">
                        <li><h3>Contact Information</h3></li>
                        <li>Hospice Niagara - The Staple Centre</li>
                        <li>403 Ontario Street, Unit 2</li>
                        <li>Tel: 905-984-8766</li>
                        <li>Fax: 905-984-8242</li>
                        <li>Web: <a href="www.hospiceniagara.ca">www.hospiceniagara.ca</a> </li>
                    </ul>
                </div>
                <div class="copyright">
                    <div class="pull-right">
                        <p>&copy; @DateTime.Now.Year - Bottle Rocket Programming</p>
                    </div>
                </div>
            </div>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
