@model HospiceNiagara.Models.FileStorage

@{
    ViewBag.Title = "Details";
}

<div class="col-md-12">
    <div class="panel panel-success ">
        <div class="panel-heading">
            File Details
        </div>
        <div id="fileDetailsBody" class="panel-body">
                @{
                    if (Model.MimeType.Contains("image"))
                    {
                        <img style="width:100%" src="~/Uploads/@Model.FileName"/>
                    }
                    else if (Model.MimeType.Contains("pdf"))
                    {
                        <object data="~/Uploads/@Model.FileName" type="application/pdf" class="col-md-12" height="700">
                            alt : <a href="~/Uploads/@Model.FileName">@Model.FileName</a>
                        </object>
                    }
                }
            <div id="fileinformation">
                <dl class="dl-horizontal">

                    <dt>
                        @Html.DisplayNameFor(model => model.FileDescription)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.FileDescription)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.FileName)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.FileName)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.MimeType)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.MimeType)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.FileUploadDateString)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.FileUploadDateString)
                    </dd>
                    @if (User.IsInRole("Administrator"))
                    {
                        <dt>
                            @Html.DisplayNameFor(model => model.UploadedBy)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.UploadedBy)
                        </dd>
                    }
                </dl>
            </div>
        </div>
        <p class="text-center">
            @Html.ActionLink("Edit", "Edit", new { id = Model.ID }) |
            @Html.ActionLink("Back to List", "Index")
        </p>
    </div>
</div>
        
