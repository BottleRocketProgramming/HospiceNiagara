@model HospiceNiagara.Models.FileStorage

@{
    ViewBag.Title = "Delete";
}

<h3>Are you sure you want to delete this?</h3>
<div>
    <hr />
    <div>
        <div id="storageimage">

            @{
                if (Model.MimeType.Contains("image"))
                {
                    <img src="~/Uploads/@Model.FileName"/>
                }
            }
        </div>

    </div>
    <dl class="dl-horizontal">
        
        <dt>
            @Html.DisplayNameFor(model => model.FileDescription)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.FileDescription)
        </dd>
        
        <dt>
            @Html.DisplayNameFor(model => model.FileName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.FileName)
        </dd>
        
        <dt>
            @Html.DisplayNameFor(model => model.MimeType)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.MimeType)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.FileUploadDateString)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.FileUploadDateString)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-primary" /> |
            @Html.ActionLink("Back to List", "Index")
        </div>
    }
</div>
