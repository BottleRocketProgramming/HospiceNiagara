
@{
    ViewBag.Title = "Admin";
}
@if (User.IsInRole("Administrator"))
{
    <div class="col-sm-3">
        <div class="panel panel-success ">
            <div class="panel-heading">
                <span title="Data Maintenance" data-content="Here you can access administrative views of the major data in the system. This enables you to access files regardless of assigned roles, or whether the date of the record has passed." class="glyphicon glyphicon-info-sign pull-right" data-toggle="popover" data-placement="bottom" data-trigger="hover"></span>
                Data Maintenance
            </div>
            <table class="table text-center">
                <tr>
                    <td>
                        <a href=../DeathNotice/AdminList>View all Death Notices</a>
                    </td>
                </tr>
                <tr>
                    <td>
                        <a href=../Announcement/AdminList>View all Announcements</a>
                    </td>
                </tr>
                <tr>
                    <td>
                        <a href=../Meeting/AdminList>View all Events</a>
                    </td>
                </tr>
                <tr>
                    <td>
                        <a href=../Schedule/AdminList>View all Schedules</a>
                    </td>
                </tr>
                <tr>
                    <td>
                        <a href=../Contacts/AdminList>View all Contacts</a>
                    </td>
                </tr>
            </table>
        </div>
    </div>
}
@if (User.IsInRole("Manage Users") || User.IsInRole("Administrator"))
{
    <div class="col-sm-3">
        <div class="panel panel-success">
            <div class="panel-heading">
                <span title="User Management" data-content="Here you can register new users and modify existing ones, as well as modify user roles." class="glyphicon glyphicon-info-sign pull-right" data-toggle="popover" data-placement="bottom" data-trigger="hover"></span>
                Manage Users
            </div>
            <table class="table text-center">
                <tr>
                    <td>
                        <a href=../Account/Register>Register New Users</a>
                    </td>
                </tr>
                <tr>
                    <td>
                        <a href=../ApplicationUsers/Index>Manage Users</a>
                    </td>
                </tr>
                @if (User.IsInRole("Administrator"))
                {
                    <tr>
                        <td>
                            <a href=../RoleLists/Index>Manage Roles</a>
                        </td>
                    </tr>
                }
            </table>
        </div>
    </div>
}
@if (User.IsInRole("Administrator"))
{
    <div class="col-sm-3">
        <div class="panel panel-success">
            <div class="panel-heading">
                <span title="User Management" data-content="Here you can access and modify all other site data." class="glyphicon glyphicon-info-sign pull-right" data-toggle="popover" data-placement="bottom" data-trigger="hover"></span>
                Site Maintenance
            </div>
            <table class="table text-center">
                <tr>
                    <td>
                        <a href=../FileCats/Index>Manage File Categories</a>
                    </td>
                </tr>
                <tr>
                    <td>
                        <a href=../FileSubcats/Index>Manage File Subcategories</a>
                    </td>
                </tr>
                <tr>
                    <td>
                        <a href=../SchedTypes/Index>Manage Schedule Types</a>
                    </td>
                </tr>
                <tr>
                    <td>
                        <a href=../ContactTypes/Index>Manage Contact Types</a>
                    </td>
                </tr>
                <tr>
                    <td>
                        <a href=../DeathNoticePoems/Index>Manage Death Notice Poems</a>
                    </td>
                </tr>
                <tr>
                    <td>
                        <a href=../WelcomeNotice/Edit/1>Edit Welcome Notice</a>
                    </td>
                </tr>
            </table>
        </div>
    </div>
}

<script>
    $(document).ready(function () {
        $('[data-toggle="popover"]').popover();
    });
</script>