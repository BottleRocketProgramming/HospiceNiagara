@Scripts.Render("~/bundles/jquery")

<script>
    $(document).ready(function () {

        //Editing the Welcome Widget
        $('#glyphWelcomeEdit').on('click', function () {
            $('#welcomeContent').toggle();
            $('#editWelcomeContent').toggle();
        });

        $('#btnUpdateWelcomeContent').on('click', function () {
            $('#editWelcomeContent').toggle();

            $('#welcomeContent').toggle();
        });
    });
</script>