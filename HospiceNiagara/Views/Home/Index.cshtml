@{
    ViewBag.Title = "Home Page";
}

<div id="homepage-body" class="container">
    <div class="col-sm-6">
        <div class="panel panel-success ">
            <div class="panel-heading">
                Announcements
            </div>
            <div class="panel-body">
                <table class="table table-striped table-bordered">
                    <tr>
                        <th>
                            Announcement
                        </th>
                        <th>
                            End Date
                        </th>
                        <th></th>
                    </tr>

                    @foreach (var item in (IEnumerable<HospiceNiagara.Models.Announcement>)ViewData["AnnouncementOrEvent"])
                    {
                        if (item.IsEvent == false)
                        {

                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.AnnounceText)
                                <td>
                                    @Html.DisplayFor(modelItem => item.AnnounceEndDate)
                                </td>
                                <td>
                                    @Html.ActionLink("Edit", "Edit", new { id = item.ID }) |
                                    @Html.ActionLink("Details", "Details", new { id = item.ID }) |
                                    @Html.ActionLink("Delete", "Delete", new { id = item.ID })

                                </td>
                            </tr>
                        }
                    }


                </table>
            </div>
        </div>


        <div class="panel panel-success">
            <div class="panel-heading">
                Upcoming
            </div>
            <div class="panel-body">
                <table class="table table-striped table-bordered">
                    <tr>
                        <td>Name</td>
                        <td>Description</td>
                        <td>Date</td>
                        <td>Location</td>
                        <td>RSVP</td>
                    </tr>
                    <tr>
                        <td>@Html.ActionLink("Annual Volunteer Retreat", "VolunteerEvent", "Announcement")</td>
                        <td>As part of our celebration of National Volunteer Week, Hospice Niagara is once again treating...</td>
                        <td>Saturday, April 20th</td>
                        <td>The Stabler Centre</td>
                        <td>
                            <div class="btn-group-vertical">
                                <button id="RSVP" class="btn btn-primary">Attending</button>
                                <button id="RSVPno" class="btn btn-default">Not Attending</button>
                            </div>
                        </td>
                    </tr>
                </table>
            </div>
        </div>
    </div>

    <div class="col-sm-3">
        <div class="panel panel-info">
            <div class="panel-heading">
                <span id="welcomeTitle">Welcome</span>
                <span id="editWelcomeTitle" hidden>Edit Welcome</span>
                <div id="glyphWelcomeEdit" class="glyphicon glyphicon-edit pull-right"></div>
            </div>
            <div id="welcomeContent" class="panel-body text-center">
                Welcome to the Hospice Niagara Portal!
            </div>
            <div id="editWelcomeContent" class="panel-body" hidden>
                <div>
                    <textarea id="editWelcomeContent" class="form-control" rows="4"></textarea>
                    <button id="btnUpdateWelcomeContent" class="btn btn-default">Update</button>
                </div>

            </div>
        
        
        </div>

        <div class="panel panel-success">
            <div class="panel-heading">
                Links
            </div>
            <div class="panel-body">
                <ul class="list media-list">
                    <li><a href="http://www.hospiceniagara.ca">Hospice Niagara Website</a></li>
                    <li><a href="http://www.hospiceniagara.ca/resources/default/index/">Hospice Niagara Newsletter</a></li>
                    <li><a href="http://www.hpceducation.ca">HPC Education Website</a></li>
                    <li><a href="https://www.hospiceniagara.ca/donations/donate.php">Hospice Niagara Online Donation Website</a></li>
                    <li><a href="https://www.facebook.com/pages/Hospice-Niagara/157424072710?ref=ts">Facebook</a></li>
                    <li><a href="https://twitter.com/HospiceNiagara">Twitter</a></li>
                    <li><a href="http://www.hikeforhospiceniagara.ca">Hike for Hospice Niagara Website</a></li>
                </ul>
            </div>
        </div>
    </div>

    <div class="col-sm-3">
        <div class="panel panel-success ">
            <div class="panel-heading">
                My Schedules
            </div>
            <div class="panel-body">
                <table class="table" style="width:100%;">
                    <tr>
                        <td>@Html.ActionLink("Welcome Desk January 2015", "January2015", "Schedule")</td>
                    </tr>
                    <tr>
                        <td>Welcome Desk Febuary 2015</td>
                    </tr>
                    <tr>
                        <td>Welcome Desk March 2015</td>
                    </tr>
                    <tr>
                        <td>Staff January 2015</td>
                    </tr>
                    <tr>
                        <td>Staff Febuary 2015</td>
                    </tr>
                    <tr>
                        <td>Staff March 2015</td>
                    </tr>
                </table>
            </div>
        </div>
        
    </div>
</div>


<footer class="footer ">
    <div class="container">
        <div class="col-sm-6">
            <ul class="Contact-Information">
                <li><h3>Contact Information</h3></li>
                <li>Hospice Niagara - The Staple Centre</li>
                <li>403 Ontario Street, Unit 2</li>
                <li>Tel: 905-984-8766</li>
                <li>Fax: 905-984-8242</li>
                <li>Web: <a href="www.hospiceniagara.ca">www.hospiceniagara.ca</a> </li>
            </ul>
        </div>
        <div class="copyright">
            <div class="pull-right">
                <p>&copy; @DateTime.Now.Year - Bottle Rocket Programming</p>
            </div>
        </div>
    </div>
</footer>

@Scripts.Render("~/bundles/jquery")

<script>
    $(document).ready(function () {

        //Editing the Welcome Widget
        $('#glyphWelcomeEdit').on('click', function () {
            $('#welcomeContent').slideToggle();
            $('#editWelcomeContent').slideToggle();
            $('#editWelcomeTitle').slideToggle();
            $('#welcomeTitle').slideToggle();
            $('#glyphWelcomeEdit').fadeToggle();
        });

        $('#btnUpdateWelcomeContent').on('click', function () {
            $('#welcomeContent').slideToggle();
            $('#editWelcomeContent').slideToggle();
            $('#editWelcomeTitle').slideToggle();
            $('#welcomeTitle').slideToggle();
            $('#glyphWelcomeEdit').fadeToggle();
        });
    });
</script>