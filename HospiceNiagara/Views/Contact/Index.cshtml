@model HospiceNiagara.Models.BoardContact
@*Andreas King March 2015*@
@{
    ViewBag.Title = "Index";
}

<div class="col-sm-8">
    <div class="panel panel-success ">
        <div class="panel-heading">
            Contacts
        </div>
        <div class="panel-body">
            <div class="panel-body-toolbar form-inline">
                <input class="form-control" id="txtSearchByName" type="text" placeholder="Search" />
            </div>
            <table class="table table-striped table-bordered" style="width:100%;">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.BoardContPosition)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.BoardContHomeAddy)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.BoardContWorkAddy)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.BoardContHomePhone)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.BoardContWorkPhone)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.BoardContCellPhone)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.BoardContFaxNum)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.BoardContPartnerName)
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in (IEnumerable<HospiceNiagara.Models.BoardContact>)ViewData["Contact"])
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.BoardContPosition)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.BoardContHomeAddy)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.BoardContWorkAddy)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.BoardContHomePhone)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.BoardContWorkPhone)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.BoardContCellPhone)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.BoardContFaxNum)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.BoardContPartnerName)
                        </td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", new { id = item.ID }) |
                            @Html.ActionLink("Details", "Details", new { id = item.ID }) |
                            @Html.ActionLink("Delete", "Delete", new { id = item.ID })
                        </td>
                    </tr>
                }
            </table>
        </div>
    </div>
</div>

<div class="col-sm-4" id="panelPositionDesc" hidden>
    <div class="panel panel-success">
        <div class="panel-heading">
            About this position
        </div>
        <div class="panel-body">
            <h4>Areas of Responisibility</h4>
            <p>
                -Leadership Team Member<br />
                -Finance Lead<br />
                -IT Lead<br />
                -Facilities Lead<br />
                -Administration Lead<br />
                -Coordinator of Volunteers:<br />
                -Scheduling of Welcome Desk, Residential and Kitchen Helper volunteer roles<br />
                -Communication, recognition and ongoing support of all Volunteers<br />
                -Supervises Administrative Assistant, Financial Associate, Chef and Maintenance contract
            </p>
        </div>
    </div>
</div>

@Scripts.Render("~/bundles/jquery")

<script>
    $(document).ready(function () {
        $('#glyphJobInfo').on('click', function () {
            $('#panelPositionDesc').slideToggle();
        });


    });
</script>