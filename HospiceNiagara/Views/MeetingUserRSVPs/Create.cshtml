         <div class="form-group">
                            <label class="control-label col-md-2">Select Event</label>
                            <div class="col-md-offset-2 col-md-10">
                                <table class="table">
                                    <tr>
                                        @{
                                            int c = 0;
                                            List<HospiceNiagara.ViewModels.MettingVM> meet = ViewBag.Meeting;
                                            foreach(var r in meet)
                                            {
                                                if (c++ % 2 == 0)
                                                {
                                                @:</tr><tr>
                                                }
                                                @:<td>
                                                    <input type="checkbox"
                                                    name="selectedMeetings"
                                                    value="@r.MeetingId"
                                                         />
                                                    @r.MeetingName
                                                @:</td>
                                            }
                                        @:</tr>
                                        }
                                    </table>
                                </div>
                            </div>

         <div class="form-group">
                            <label class="control-label col-md-2">Select Users</label>
                            <div class="col-md-offset-2 col-md-10">
                                <table class="table">
                                    <tr>
                                        @{
                                            int ct = 0;
                                            List<HospiceNiagara.ViewModels.UserVM> use = ViewBag.User;
                                            foreach(var r in use)
                                            {
                                                if (ct++ % 2 == 0)
                                                {
                                                @:</tr><tr>
                                                }
                                                @:<td>
                                                    <input type="checkbox"
                                                    name="selectedUsers"
                                                    value="@r.UserID"
                                                         />
                                                    @r.UserFullName
                                                @:</td>
                                            }
                                        @:</tr>
                                        }
                                    </table>
                                </div>
                            </div>

