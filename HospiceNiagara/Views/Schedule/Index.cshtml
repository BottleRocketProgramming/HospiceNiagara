@model HospiceNiagara.Models.Schedule
@*Andreas King March 2015*@
@{
    ViewBag.Title = "Index";
}

<div class="container">
    <div class="col-sm-12">
        <div class="panel panel-success ">
            <div class="panel-heading">
                <span id="welcomeDeskScheduleTitle">Welcome Desk Schedule</span>
                <span id="newWelcomeDeskScheduleTitle" hidden>New Welcome Desk Schedule</span>
                <div id="glyphNewWelcomeDeskSchedule" class="glyphicon glyphicon-plus pull-right"></div>
            </div>
            <div id="welcomeDeskScheduleContent">
                <div id="scheduleWelcomeDeskList" class="panel-body">
                    <table class="table">
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.SchedName)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.SchedStartDate)
                            </th>
                            <th></th>
                        </tr>
                        @foreach (var item in (IEnumerable<HospiceNiagara.Models.Schedule>)ViewData["Schedule"])
                        {
                            <tr>
                                <td>                          
                                    <a target="_blank" href=@item.SchedLink>@Html.DisplayFor(modelItem => item.SchedName) </a>
                                <td>
                                    @Html.DisplayFor(modelItem => item.SchedStartDate)
                                </td>
                                <td>
                                    @Html.ActionLink("Edit", "Edit", new { id = item.ID }) |
                                    @Html.ActionLink("Details", "Details", new { id = item.ID }) |
                                    @Html.ActionLink("Delete", "Delete", new { id = item.ID })
                                </td>
                            </tr>
                        }
                    </table>
                </div>
                <div id="newWelcomeDeskSchedule" class="panel-body" hidden>
                    @using (Html.BeginForm())
                        {
                             @Html.AntiForgeryToken()

                            <div class="form-group">
                                <div>
                                    <div class="form-horizontal">
                                            <h4>Schedule</h4>
                                            <hr />
                                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                            <div class="form-group">
                                                @Html.LabelFor(model => model.SchedName, htmlAttributes: new { @class = "control-label col-md-2" })
                                                <div class="col-md-10">
                                                    @Html.EditorFor(model => model.SchedName, new { htmlAttributes = new { @class = "form-control" } })
                                                    @Html.ValidationMessageFor(model => model.SchedName, "", new { @class = "text-danger" })
                                                </div>
                                            </div>

                                            <div class="form-group">
                                                @Html.LabelFor(model => model.SchedLink, htmlAttributes: new { @class = "control-label col-md-2" })
                                                <div class="col-md-10">
                                                    @Html.EditorFor(model => model.SchedLink, new { htmlAttributes = new { @class = "form-control" } })
                                                    @Html.ValidationMessageFor(model => model.SchedLink, "", new { @class = "text-danger" })
                                                </div>
                                            </div>

                                            <div class="form-group">
                                                @Html.LabelFor(model => model.SchedStartDate, htmlAttributes: new { @class = "control-label col-md-2" })
                                                <div class="col-md-10">
                                                    @Html.EditorFor(model => model.SchedStartDate, new { htmlAttributes = new { @class = "form-control" } })
                                                    @Html.ValidationMessageFor(model => model.SchedStartDate, "", new { @class = "text-danger" })
                                                </div>
                                            </div>

                                            <div class="form-group">
                                                @Html.LabelFor(model => model.SchedEndDate, htmlAttributes: new { @class = "control-label col-md-2" })
                                                <div class="col-md-10">
                                                    @Html.EditorFor(model => model.SchedEndDate, new { htmlAttributes = new { @class = "form-control" } })
                                                    @Html.ValidationMessageFor(model => model.SchedEndDate, "", new { @class = "text-danger" })
                                                </div>
                                            </div>
                                        </div>
                                    <label class="control-label col-md-2">Schedule Types</label>
                                    <select class="dropdown" name="selectedSchedType">
                                        @{

                                            List<HospiceNiagara.ViewModels.SchedTypeVM> types = ViewBag.SchedTypes;
                                            foreach (var t in types)
                                            {
                                                <option value=@t.ID>@t.SchedTypeName</option>
                                            }
                                            @:
                                        }
                                    </select>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-10">
                                    <input type="submit" value="Create" name="CreateSchedule" class="btn btn-default" />
                                    @Html.ActionLink("Cancel", "Index")
                                </div>
                            </div>
                        }
                </div>
            </div>
        </div>
    </div>

</div>

@Scripts.Render("~/bundles/jquery")

<script>
    $(document).ready(function () {
        $('#glyphNewWelcomeDeskSchedule').on('click', function () {
            $('#welcomeDeskScheduleTitle').slideToggle();
            $('#scheduleWelcomeDeskList').slideToggle();
            $('#newWelcomeDeskSchedule').slideToggle();
            $('#newWelcomeDeskScheduleTitle').slideToggle();
            $('#glyphNewWelcomeDeskSchedule').fadeToggle();
        });

        $('#btnAddNewWelcomeDeskSchedule').on('click', function () {
            $('#welcomeDeskScheduleTitle').slideToggle();
            $('#scheduleWelcomeDeskList').slideToggle();
            $('#newWelcomeDeskSchedule').slideToggle();
            $('#newWelcomeDeskScheduleTitle').slideToggle();
            $('#glyphNewWelcomeDeskSchedule').fadeToggle();
        });

        $('#btnCancelNewWelcomeDeskSchedule').on('click', function () {
            $('#welcomeDeskScheduleTitle').slideToggle();
            $('#scheduleWelcomeDeskList').slideToggle();
            $('#newWelcomeDeskSchedule').slideToggle();
            $('#newWelcomeDeskScheduleTitle').slideToggle();
            $('#glyphNewWelcomeDeskSchedule').fadeToggle();
        });
    });
</script>