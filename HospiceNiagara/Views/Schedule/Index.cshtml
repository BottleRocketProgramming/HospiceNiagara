@model HospiceNiagara.Models.Schedule
@*Andreas King March 2015*@
@{
    ViewBag.Title = "Index";
}

<div class="container">
    <div class="col-sm-12">
        <div class="panel panel-success ">
            <div class="panel-heading">
                <span id="schedulesTitle">Schedules</span>
                <span id="newschedulesTitle" hidden>New Schedule</span>
                @if (User.IsInRole("Administrator"))
                {
                    <div id="glyphNewSchedule" class="glyphicon glyphicon-plus pull-right"></div>
                }
            </div>
            <div id="scheduleContent">
                <div id="scheduleLists" class="panel-body">
                    <div class="col-md-6">
                        <h4>Welcome Desk</h4>
                        <table class="table">
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.SchedName)
                            </th>         
                            @if (User.IsInRole("Administrator"))
                            {
                            <th></th>
                            }
                        </tr>
                        @foreach (var item in (IEnumerable<HospiceNiagara.Models.Schedule>)ViewData["Schedule"])
                        {
                            if (item.SchedType.ID.Equals(1))
                            {
                                <tr>
                                    <td>
                                        <a target="_blank" href="https://@item.SchedLink">@Html.DisplayFor(modelItem => item.SchedName) </a>
                                    </td>
                                    @if (User.IsInRole("Administrator"))
                                    {
                                    <td>
                                        @Html.ActionLink("Edit", "Edit", new { id = item.ID }) |
                                        @Html.ActionLink("Details", "Details", new { id = item.ID }) |
                                        @Html.ActionLink("Delete", "Delete", new { id = item.ID })
                                    </td>
                                    }
                                </tr>
                            }
                        }
                        </table>
                    </div>
                    <div class="col-md-6">
                        <h4>Residential</h4>
                        <table class="table">
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.SchedName)
                                </th>
                                
                                <th></th>
                            </tr>
                            @foreach (var item in (IEnumerable<HospiceNiagara.Models.Schedule>)ViewData["Schedule"])
                            {
                                if (item.SchedType.ID.Equals(2))
                                {
                                    <tr>
                                        <td>
                                            <a target="_blank" href="https://@item.SchedLink">@Html.DisplayFor(modelItem => item.SchedName) </a>
                                        </td>
                                           
                                        <td>
                                            @Html.ActionLink("Edit", "Edit", new { id = item.ID }) |
                                            @Html.ActionLink("Details", "Details", new { id = item.ID }) |
                                            @Html.ActionLink("Delete", "Delete", new { id = item.ID })
                                        </td>
                                    </tr>
                                }
                            }
                        </table>
                    </div>
                    <div class="col-md-6">
                        <h4>Pet Therapy</h4>
                        <table class="table">
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.SchedName)
                                </th>
                                
                                <th></th>
                            </tr>
                            @foreach (var item in (IEnumerable<HospiceNiagara.Models.Schedule>)ViewData["Schedule"])
                            {
                                if (item.SchedType.ID.Equals(3))
                                {
                                    <tr>
                                        <td>
                                            <a target="_blank" href="https://@item.SchedLink">@Html.DisplayFor(modelItem => item.SchedName) </a>
                                        </td>
                                           
                                        <td>
                                            @Html.ActionLink("Edit", "Edit", new { id = item.ID }) |
                                            @Html.ActionLink("Details", "Details", new { id = item.ID }) |
                                            @Html.ActionLink("Delete", "Delete", new { id = item.ID })
                                        </td>
                                    </tr>
                                }
                            }
                        </table>
                    </div>
                    <div class="col-md-6">
                        <h4>St. Catharines Day Hospice</h4>
                        <table class="table">
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.SchedName)
                                </th>                                
                                <th></th>
                            </tr>
                            @foreach (var item in (IEnumerable<HospiceNiagara.Models.Schedule>)ViewData["Schedule"])
                            {
                                if (item.SchedType.ID.Equals(4))
                                {
                                    <tr>
                                        <td>
                                            <a target="_blank" href="https://@item.SchedLink">@Html.DisplayFor(modelItem => item.SchedName) </a>
                                        </td>
                                        <td>
                                            @Html.ActionLink("Edit", "Edit", new { id = item.ID }) |
